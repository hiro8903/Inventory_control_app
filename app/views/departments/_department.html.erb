<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <li>
      <%= department.name %>
      <% if current_user.admin? %>
        <%= link_to "編集", edit_department_path(department), class: "btn btn-success" %>
          <%= link_to "削除", department, method: :delete, 
                              class: "btn btn-danger", data: { confirm: "#{department.name}を削除しても良いですか？" } %>
      <% end %>
    </li>
  </div>
</div>
