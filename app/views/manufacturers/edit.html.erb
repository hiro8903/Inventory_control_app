<% provide(:title, "Edit manufacturer") %>
<% provide(:button_text, "変更を保存") %>
<h1>メーカー情報の更新</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @manufacturer, local: true do |f| %>

 <%= render 'shared/error_messages', object: @manufacturer %> 


      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
