<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <li>
      <%= manufacturer.name %>
      <% if current_user.admin? %>
        <%= link_to "編集", edit_manufacturer_path(manufacturer), class: "btn btn-success" %>
          <%= link_to "削除", manufacturer, method: :delete, 
                              class: "btn btn-danger", data: { confirm: "#{manufacturer.name}を削除しても良いですか？" } %>
      <% end %>
    </li>
  </div>
</div>
