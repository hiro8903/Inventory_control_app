<% if @department.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      入力エラーが <%= (@department.errors.count) %>件ありました。
    </div>
    <ul>
    <% @department.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
